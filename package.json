{
	"name": "@p-buddy/parkdown",
	"type": "module",
	"private": false,
	"version": "0.0.22",
	"main": "src/index.ts",
	"bin": "src/cli.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"publishConfig": {
		"main": "./dist/index.js",
		"typings": "./dist/index.d.ts",
		"bin": "./dist/cli.js",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.js",
				"require": "./dist/index.umd.cjs"
			}
		},
		"access": "public"
	},
	"scripts": {
		"auto:commit:tracked": "git add -u && (git diff-index --quiet HEAD -- || git commit -m \"Automated commit.\")",
		"build:lib": "vite build",
		"build:cli": "vite build --config vite.cli.config.ts",
		"build": "pnpm run build:lib && pnpm run build:cli",
		"test": "vitest",
		"test:run": "vitest run",
		"cli": "npx tsx src/cli.ts",
		"doc:commit": "pnpm cli && pnpm auto:commit:tracked",
		"prepare": "pnpm test:run && pnpm doc:commit && pnpm build && npm version patch && git push && pnpm build:cli"
	},
	"devDependencies": {
		"@types/node": "^22.13.10",
		"@types/unist": "^3.0.3",
		"typescript": "^5.8.2",
		"vite": "^6.2.1",
		"vite-plugin-dts": "^4.5.3",
		"vite-plugin-externalize-deps": "^0.9.0",
		"vitest": "^3.0.8"
	},
	"dependencies": {
		"@commander-js/extra-typings": "^13.1.0",
		"chokidar": "^4.0.3",
		"remark-parse": "^11.0.0",
		"ts-dedent": "^2.2.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0"
	}
}